# Ubuntu upstart file at /etc/init/oldboy.conf
 
kill timeout 30 # wait 30s between SIGTERM and SIGKILL.

start on runlevel [2345]
stop on runlevel [06]

respawn

exec /usr/local/bin/oldboy --throttle 10 --partition-range 5 --batch 100 <%= @when_to_run ? "--when #{@when_to_run}" : "" %> <%= "#{@token}" %>
